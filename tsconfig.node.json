{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["ES2015"],
        "module": "esnext",
        "skipLibCheck": true,


        /* BundLer mode */
        "moduleResolution": "bundler",
        "allowArbitraryExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,


        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
    },
    "include": ["vite.config.ts"]
}